<!doctype html>
<html lang="en">
  <head>
    <%- include('./parcials/head.ejs') %>
  </head>
  <body>
    <%- include('./parcials/navbar.ejs') %>

      <div class="container-md"><h1 class="m-">SIGNIN YOU ACCOUNT</h1></div>
    
      <div class="container mt-4">
        <form action="/user/signin" method="POST" >
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" required aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
          </div>

          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>  
            <input type="text" class="form-control" id="password" name="password" required>
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
        </form>    
      </div>
    <%- include('./parcials/script.ejs') %>
  </body>
</html>