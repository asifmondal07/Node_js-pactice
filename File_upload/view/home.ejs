<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>File Upload</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center">Upload Your File</h1>
      
      <form action="/uploads" method="POST" enctype="multipart/form-data" class="mt-4">
        <div class="mb-3">
          <label for="exampleInputFile" class="form-label">Select a File</label>
          <input type="file" class="form-control" name="profileName" required>
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
      </form>

      <hr>

      <h2 class="text-center mt-5">Uploaded Files</h2>
      <div class="row mt-4">
        <!-- Display images dynamically -->
        <% if (images && images.length > 0) { %>
          <% images.forEach(image => { %>
            <div class="col-md-4 mb-3">
              <div class="card">
                <img src="/image/<%= image._id %>" class="card-img-top" alt="<%= image.name %>">
                <div class="card-body">
                  <h5 class="card-title"><%= image.name %></h5>
                  <form action="/delete/<%= image._id %>" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-center">No files uploaded yet.</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
